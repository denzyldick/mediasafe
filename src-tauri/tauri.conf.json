{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "mediasafe",
  "version": "0.1.0",
  "identifier": "io.denzyl.mediasafe",
  "build": {
    "beforeDevCommand": "yarn dev -- --host",
    "devUrl": "http://0.0.0.0:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "mediasafe",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

